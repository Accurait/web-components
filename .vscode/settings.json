{
  "editor.tabSize": 2,
  // Use `eslint` for vue, ts and js
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[js]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[ts]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": ["javascript", "typescript", "vue"],
  // Tailwind Support, see https://tailwindcss.nuxt.dev/tailwind/editor-support
  "tailwindCSS.experimental.configFile": ".nuxt/tailwind.config.cjs",

  // Auto-complete `.value` attribute when volar is installed
  "volar.autoCompleteRefs": true,
  "files.associations": {
    "*.css": "tailwindcss",
    "*.sass": "tailwindcss",
    "*.postss": "tailwindcss",
    "*.scss": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "workbench.colorCustomizations": {
    "activityBar.inactiveBackground": "#15202b",
    "activityBar.dropBackground": "#d4bf9e",
    "activityBar.activeBorder": "#706145",
    "commandCenter.background": "#62553c",
    "commandCenter.activeBackground": "#584c36",
    "commandCenter.activeBorder": "#584c36",
    "commandCenter.activeForeground": "#d4bf9e",
    "commandCenter.foreground": "#d4bf9e",
    "menu.border": "#041A16"
  },
}
